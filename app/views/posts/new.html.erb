<%= form_with(model: @post, local: true) do |f| %>
        <%= f.label :image, '画像' %>
        <%= f.file_field :image %>
        
        <% if @post.image.attached? %>
          <%= image_tag image %>
        <% end %>
        
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
          <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
    <% end %>